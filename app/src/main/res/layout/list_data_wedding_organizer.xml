<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivGambarWeddingOrganizer"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/icon_wo2"
            android:scaleType="centerCrop"
            android:elevation="1dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDetailWeddingOrganizer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivGambarWeddingOrganizer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvNamaWeddingOrganizer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:text="Nama Wedding Organizer"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:elevation="20dp"/>

            <TextView
                android:id="@+id/tvTitleAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvNamaWeddingOrganizer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:text="Alamat : "
                android:textSize="14sp"
                android:textColor="@color/abuabu_tua"
                android:elevation="20dp"/>

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tvTitleAlamat"
                app:layout_constraintStart_toEndOf="@id/tvTitleAlamat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:maxLines="2"
                android:text="Alamat"
                android:textSize="14sp"
                android:textColor="@color/abuabu_tua"
                android:elevation="20dp"/>

            <TextView
                android:id="@+id/tvTitleHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAlamat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="Harga : "
                android:textSize="14sp"
                android:textColor="@color/abuabu_tua"
                android:elevation="20dp"/>

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tvTitleHarga"
                app:layout_constraintStart_toEndOf="@id/tvTitleHarga"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:text="Rp.10.0000"
                android:textSize="14sp"
                android:textColor="@color/abuabu_tua"
                android:elevation="20dp"/>

            <TextView
                android:id="@+id/tvTitleVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTitleHarga"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="Vendor : "
                android:textSize="14sp"
                android:textColor="@color/abuabu_tua"
                android:elevation="20dp"/>

            <TextView
                android:id="@+id/tvVendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTitleVendor"
                app:layout_constraintStart_toStartOf="@id/tvTitleVendor"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:maxLines="2"
                android:text="Vendor, vendor"
                android:textSize="14sp"
                android:textColor="@color/abuabu_tua"
                android:elevation="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>