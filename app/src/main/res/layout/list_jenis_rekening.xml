<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/tvJenisBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="14dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:text="Bank "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/tvNoRekening"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvJenisBank"
        app:layout_constraintStart_toEndOf="@id/tvJenisBank"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="0123971239871398"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:elevation="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/abuabu_muda"
        app:layout_constraintTop_toBottomOf="@id/tvNoRekening"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>